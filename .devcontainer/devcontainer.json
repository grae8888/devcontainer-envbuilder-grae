{
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--privileged",
        "--network=host",
        "--security-opt=seccomp=unconfined",
        "-h", "${localEnv:HOSTNAME}"
    ],
    "workspaceMount": "source=/home/coder/envbuilder,target=/workspaces,type=bind",
    "workspaceFolder": "/workspaces",
    "remoteUser": "coder",
    "onCreateCommand": "sudo usermod -aG docker coder && newgrp docker",
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "containerEnv": {
        "DOCKER_TLS_CERTDIR": ""
    }
}
