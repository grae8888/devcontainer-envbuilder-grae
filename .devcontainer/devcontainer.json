{
    "build": {
        "dockerfile": "Dockerfile"
    },
    "onCreateCommand": "/install-docker.sh",
    "remoteUser": "coder",
    "containerUser": "coder",
    "runArgs": [
        "--privileged",
        "--network=host",
        "-h", "${localEnv:HOSTNAME}"
    ],
    "workspaceFolder": "/workspaces",
    "workspaceMount": "source=/workspaces,target=/workspaces,type=bind",
    "containerEnv": {
        "DOCKER_TLS_CERTDIR": ""
    }
}
