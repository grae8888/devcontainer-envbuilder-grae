{
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--privileged",
        "--network=host",
        "--security-opt=seccomp=unconfined",
        "--cap-add", "SYS_ADMIN",
        "--cap-add", "SETUID",
        "--cap-add", "SETGID",
        "--device", "/dev/fuse",
        "-h", "${localEnv:HOSTNAME}"
    ],
    "workspaceFolder": "/workspaces",
    "workspaceMount": "source=/workspaces,target=/workspaces,type=bind",
    "containerEnv": {
        "DOCKER_TLS_CERTDIR": ""
    }
}
